{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metarepo Sync Report",
  "type": "object",
  "required": ["version", "source", "mode", "status", "generated_at", "summary", "details"],
  "properties": {
    "version": { "type": "integer" },
    "source": { "const": "metarepo" },
    "mode": { "enum": ["dry_run", "apply"] },
    "status": { "enum": ["ok", "error"] },
    "generated_at": { "type": "string", "format": "date-time" },
    "metarepo_path": { "type": "string" },
    "manifest_path": { "type": "string" },
    "summary": {
      "type": "object",
      "required": ["add", "update", "skip", "blocked", "error"],
      "properties": {
        "add": { "type": "integer", "minimum": 0 },
        "update": { "type": "integer", "minimum": 0 },
        "skip": { "type": "integer", "minimum": 0 },
        "blocked": { "type": "integer", "minimum": 0 },
        "error": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "details": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "action"],
        "properties": {
          "id": { "type": "string" },
          "target": { "type": "string" },
          "action": { "enum": ["ADD", "UPDATE", "SKIP", "BLOCKED", "ERROR"] },
          "reason": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
