#!/usr/bin/env bash
set -euo pipefail

RLENS_DIR="${RLENS_DIR:-$HOME/repos/tools/merger/repoLens}"
export RLENS_HUB="${RLENS_HUB:-$HOME/repos}"
export RLENS_HOST="${RLENS_HOST:-127.0.0.1}"
export RLENS_PORT="${RLENS_PORT:-8787}"

# bequemste Tokenvariante lokal: default nur f√ºr loopback ok
export RLENS_TOKEN="${RLENS_TOKEN:-heimgewebe-local}"

cd "$RLENS_DIR"
exec python3 service/rlens.py --open
