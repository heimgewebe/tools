#!/usr/bin/env bash
set -euo pipefail

REPOLENS_DIR="${REPOLENS_DIR:-$HOME/repos/tools/merger/repoLens}"
export REPOLENS_HUB="${REPOLENS_HUB:-$HOME/repos}"
export REPOLENS_HOST="${REPOLENS_HOST:-127.0.0.1}"
export REPOLENS_PORT="${REPOLENS_PORT:-8787}"

# bequemste Tokenvariante lokal: default nur f√ºr loopback ok
export REPOLENS_TOKEN="${REPOLENS_TOKEN:-heimgewebe-local}"

cd "$REPOLENS_DIR"
exec python3 repolensd.py --open
